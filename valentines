    <div class="buttons">
      <button id="noBtn">No üôà</button>
      <button id="yesBtn">Yes üíò</button>
    </div>

    <div class="message" id="loveMsg">
      YAYYY!! I love you ‚ù§Ô∏è
    </div>
  </div>

  <script>
    const noBtn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");
    const msg = document.getElementById("loveMsg");

    const card = document.querySelector(".card");

    function moveButton() {
      const cardRect = card.getBoundingClientRect();

      const maxX = cardRect.width - noBtn.offsetWidth;
      const maxY = cardRect.height - noBtn.offsetHeight - 60;

      const randX = Math.random() * maxX;
      const randY = Math.random() * maxY;

      noBtn.style.left = randX + "px";
      noBtn.style.top = randY + "px";
    }

    // Run away when mouse gets close
    noBtn.addEventListener("mouseenter", moveButton);

    // For mobile taps
    noBtn.addEventListener("touchstart", moveButton);

    yesBtn.addEventListener("click", () => {
      msg.style.display = "block";
      yesBtn.innerText = "Best choice ever ü•∞";
    });
  </script>
